html {
  font-family: 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 16px;
  word-spacing: 1px;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  box-sizing: border-box;
}

body {
  font-size: 100%;
}

*,
*:before,
*:after {
  box-sizing: border-box;
  margin: 0;
}

#trans-tooltip, #tip-arrow-bottom, #tip-arrow-top {
  display none
}

.full-container {
  margin: 0 auto;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.container {
  margin: 0 auto;
  max-width: 1170px;
}

.relative {
  position relative
}

.text-center {
  text-align center;
}

.text-left {
  text-align left
}

.text-right {
  text-align right
}
